# SafeGo Frontend Environment Variables Template
# Copy this to .env.local and configure for your environment

# Backend API Base URL (REQUIRED)
# Production: https://api.safegoglobal.com
# Local Backend Dev: http://localhost:3000
# Leave empty for relative paths (SPA proxy mode)
VITE_API_BASE_URL=https://api.safegoglobal.com

# Public URL for social sharing (optional)
# Used for generating share links with UTM parameters
VITE_PUBLIC_URL=https://safegoglobal.com

# Feature flags (optional)
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_MAPS=true
