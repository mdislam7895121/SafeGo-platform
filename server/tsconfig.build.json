{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "outDir": "../dist",
    "rootDir": "../",
    "module": "CommonJS",
    "target": "ES2020",
    "moduleResolution": "Node",
    "allowImportingTsExtensions": false,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": false,
    "declaration": false,
    "noEmit": false,
    "noEmitOnError": false,
    "strict": false,
    "types": ["node"]
  },
  "include": ["../server/**/*.ts", "../shared/**/*.ts"],
  "exclude": ["../server/vite.ts", "../server/utils/seedPaymentConfig.ts"]
}
